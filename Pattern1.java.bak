import java.util.Scanner;
class Pattern1 
{
	public static void main(String[] args) 
	{
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();

		for (int i =0;i<=n ;i++ )
		{
			for (int j=0 ;j<=n ;j++ )
			{
				if (i==0 && j==0 || i==n && j==0)
				{
					System.out.print(" ");
				}
				if (i== 0 && j!=0 ||j==0 && i!=0 || i==n/2 || i==n || j==0)
				{
					System.out.print("*");
				}
			}
			System.out.println();
		}
	}
}
